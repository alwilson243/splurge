<h1>Register</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@restaurant) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :owner %>
      <%= f.text_field :owner %>

      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <p>Reservation limit 
      (One spot is one four-person table)</p>
      <%= f.text_field :reserveCap %>

      <p>Schedule</p>

      <table>
            <tr>
                  <td>Day</td>
                  <td>Open</td>
                  <td>Close</td>
            </tr>
            <tr>
                  <td>Sunday</td>
                  <td><%= f.text_field :sundayOpen %></td>
                  <td><%= f.text_field :sundayClose %></td>
            </tr>
            <tr>
                  <td>Monday</td>
                  <td><%= f.text_field :mondayOpen %></td>
                  <td><%= f.text_field :mondayClose %></td>
            </tr>
            <tr>
                  <td>Tuesday</td>
                  <td><%= f.text_field :tuesdayOpen %></td>
                  <td><%= f.text_field :tuesdayClose %></td>
            </tr>
            <tr>
                  <td>Wednesday</td>
                  <td><%= f.text_field :wednesdayOpen %></td>
                  <td><%= f.text_field :wednesdayClose %></td>
            </tr>
            <tr>
                  <td>Thursday</td>
                  <td><%= f.text_field :thursdayOpen %></td>
                  <td><%= f.text_field :thursdayClose %></td>
            </tr>
            <tr>
                  <td>Friday</td>
                  <td><%= f.text_field :fridayOpen %></td>
                  <td><%= f.text_field :fridayClose %></td>
            </tr>
            <tr>
                  <td>Saturday</td>
                  <td><%= f.text_field :saturdayOpen %></td>
                  <td><%= f.text_field :saturdayClose %></td>
            </tr>


      </table>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create My Account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
